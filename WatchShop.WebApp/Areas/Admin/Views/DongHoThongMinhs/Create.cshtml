@*Hiển thị hình ảnh xem trước khi lưu*@
<script type="text/javascript">
    function readURL(input, img) {
        if (input.files && input.files[0]) {
            var reader = new FileReader();
            reader.onload = function (e) {
                img.attr('src', e.target.result);
            }

            reader.readAsDataURL(input.files[0]);
        }
    }

    $("#mainInput").change(function () {
        readURL(this, $("#mainImg"));
    });
    $("#sub1Input").change(function () {
        readURL(this, $("#sub1Img"));
    });
    $("#sub2Input").change(function () {
        readURL(this, $("#sub2Img"));
    });
    $("#sub3Input").change(function () {
        readURL(this, $("#sub3Img"));
    });
    $("#sub4Input").change(function () {
        readURL(this, $("#sub4Img"));
    });
</script>

